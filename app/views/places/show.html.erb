<h1>Places#show</h1>
<p>Find me in app/views/places/show.html.erb</p>
<div class="row top-buffer">

	<div class="col-lg-8">
		<div class="container">
  		<script type="text/javascript" charset="utf-8" async src="https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3Aec5ba3cc6dad5062ea60a8b571021e4a2dd98a62639e6498dc0c7717ba1ca7cb&amp;width=100%&amp;height=400&amp;lang=ru_RU&amp;scroll=true"></script>
		</div>
	</div>

	<div class="col-lg-4 text-center">
		<div class="container">
			<div class="card ">
				<h1><%= @place.name %></h1>
				<p class="title"><%= @place.address %></p>
				<p class="title">lon: <%= @place.longitude %>, lat: <%= @place.latitude %></p>
				<div style="margin: 24px 0;">
					<a href="#reviews" data-turbolinks="false"><i class="material-icons">comment</i></a>
					<% if user_signed_in? && @place.user_id == current_user.id %>
    				<a href="#"><i class="material-icons">delete_forever</i></a>
    				<a href="#"><i class="material-icons">mode_edit</i></a>
    			<% end  %>
 				</div>
			</div>
		</div>
	</div>

</div>

<div id="reviews" class="row top-buffer">
	
</div>