<div class="comments-header">  
  <h4>
    <%= commentable.comment_threads.count == 0 ? t(:'No') : commentable.comment_threads.count %> <%= t(:'comments') %>
  </h4>
</div>
<% if user_signed_in? %>

	<%= render partial: "comments/form", locals: {new_comment: new_comment} %>

	<div class="comments-container">  
  	<%= render partial: "comments/reply", locals: {comments: commentable.root_comments} %>
	</div>

<% else %>

	<div class="alert alert-warning">
  	<%= link_to t(:'Sign in'), new_user_session_path, :class => 'alert-link' %> <%= t(:'to see and post comments.') %>
  </div>

<% end %>