<div class="container text-center top-buffer">
	<h3>Categories</h3>
	
	<div class="row top-buffer">

		<% @categories.take(3).each do |cat| %>
			<div class="col-lg-4">
				<ul class="list-group">
					<li class="list-group-item active"><%= cat[:name] %></li>
					<% Place.where(category_id: cat[:id]).each do |place| %>
						<a href="#" class="list-group-item list-group-item-action"><%= place[:name] %></a>
					<% end %>
				</ul>
			</div>
		<% end %>

	</div>

	<div class="row top-buffer">

		<% @categories.drop(3).each do |cat| %>
			<div class="col-lg-4">
				<ul class="list-group">
					<li class="list-group-item active"><%= cat[:name] %></li>
					<% Place.where(category_id: cat[:id]).each do |place| %>
						<a href="#" class="list-group-item list-group-item-action"><%= place[:name] %></a>
					<% end %>
				</ul>
			</div>
		<% end %>

	</div>

</div>